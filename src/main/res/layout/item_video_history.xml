<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/item_video_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/tv_small_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="4dp"
        tools:text="2018-08-01 12:00:00" />
    <ImageView
        android:id="@+id/item_video_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share_normal"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <cn.krisez.car.utils.SampleCoverVideo
        android:id="@+id/item_video_list_player"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/item_video_time"/>

    <TextView
        android:id="@+id/item_video_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_video_list_player"
        tools:text="地点：重庆市XXXXXXX"
        android:layout_margin="4dp"
        android:textSize="@dimen/tv_small_size"
        android:textColor="@color/light_gray"
        />
</android.support.constraint.ConstraintLayout>